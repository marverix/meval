{
    "env": {
        "browser": true,
        "commonjs": true,
        "shared-node-browser": true,
        "mocha": true,
        "es6": true
    },
    "globals": {
      "globalThis": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            { "avoidEscape": true }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
